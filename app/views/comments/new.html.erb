<h4 class="comment-count"></h4>
  <div class="comment-entries"></div>
  <h4>Reply</h4>
  <% if logged_in? %>
	<%= render @comment.parent if @comment.parent %>
	<%= render "form" %>
  <% else %>
    You need to be signed in to comment.<br><br>
    <%= link_to "Log In", login_url, :class => "btn-primary btn" %>
  <% end %>
<p><%= link_to "Back", story_url(@commentable) %></p>


    
 
