
  <div class="modal-header">
    <a class="close" data-dismiss="modal">&times;</a>
    <h3>Edit a Blog Post</h3>
  </div>
  <% if logged_in? %>
    <%= form_for(@story) do |f| %>
      <div class="modal-body">
        <p>
          <div class="control-group">
            <div class="controls">
              <%= f.text_field :title,
                :class => "span4"
              %>
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <%= f.text_area :description,
                :rows => 10,
                :class => "span5" %>
            </div>
          </div>
          <div class="control-group">
            <label>
              <strong>Edit Photo</strong>
            </label>
            <div class="controls">
             <% if @story.image_exists? %>
             <%= link_to image_tag(@story.image.url(:thumb), :class=>'sidebar-story-thumb'), @story %>
              <%= f.text_field :image_file_name %>
              <%= f.file_field :photo, @image %>
             <% else %>
              <%= f.file_field :photo, :class => "choose-photo" %>
              <%end%>
            </div>
          </div>
        </p>
      </div>
      <div class="modal-footer">
        <a href="#" data-dismiss="modal" class="btn">Cancel</a>
        <button type="submit" class="btn btn-primary">
          Update
        </button>
      </div>
    <% end %>
  <% else %>
    <div class="modal-body">
      <p>
        You need to be signed in to write a blog entry.
      </p>
    </div>
    <div class="modal-footer">
        <a href="#" data-dismiss="modal" class="btn">Close</a>
        <%= link_to "Log In", login_url, :class => "btn btn-primary" %>
      </div>
  <% end %>
